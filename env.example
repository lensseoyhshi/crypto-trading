# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./trading.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/trading_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Webhook Security
